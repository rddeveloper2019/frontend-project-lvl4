{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "ignorePatterns": ["/dist/*", "/__tests__/*", "/bin/*"],
  "rules": {
    "import/extensions": 0,
    "jsx-quotes": ["error", "prefer-double"],
    "no-console": 0,
    "react/prop-types": 0,
    "react-hooks/exhaustive-deps": 0,
    "no-param-reassign": 0
  }
}
